{
  "name": "kiro-ai-rules",
  "version": "1.3.1",
  "description": "AI code generation rules and standards for Kiro-driven development",
  "private": true,
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,yml,yaml,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,yml,yaml,md}\"",
    "type-check": "tsc --noEmit",
    "validate": "npm run lint && npm run format:check",
    "release": "semantic-release",
    "release:dry-run": "semantic-release --dry-run",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.0",
    "@commitlint/config-conventional": "^18.4.0",
    "@eslint/js": "^9.39.2",
    "@semantic-release/changelog": "^6.0.0",
    "@semantic-release/git": "^10.0.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^8.53.0",
    "@typescript-eslint/parser": "^8.53.0",
    "conventional-changelog-conventionalcommits": "^7.0.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^9.0.0",
    "globals": "^17.0.0",
    "husky": "^9.0.0",
    "lint-staged": "^15.0.0",
    "prettier": "^3.0.0",
    "semantic-release": "^25.0.2",
    "typescript": "^5.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/palpito-hunch/kiro-project-template.git"
  },
  "keywords": [
    "ai",
    "kiro",
    "rules",
    "standards",
    "code-generation",
    "mcp",
    "spec-driven"
  ],
  "license": "MIT"
}
