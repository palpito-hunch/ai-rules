{
  "$schema": "https://json.schemastore.org/tsconfig",
  "_comment": "TypeScript Configuration Reference - See .kiro/standards/typescript/ for documentation",
  "compilerOptions": {
    // Language and Environment
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "ESNext",
    "moduleResolution": "bundler",

    // Strict Type Checking (per coding standards)
    // Reference: .kiro/standards/typescript/style.md
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    // Module Resolution
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "isolatedModules": true,

    // Path Aliases (customize for your project)
    // Reference: .kiro/standards/typescript/architecture.md#path-aliases
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@components/*": ["./src/components/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@services/*": ["./src/services/*"],
      "@repositories/*": ["./src/repositories/*"],
      "@utils/*": ["./src/utils/*"],
      "@types/*": ["./src/types/*"]
    },

    // Output
    "noEmit": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true
  },
  "include": [".kiro/**/*.ts"],
  "exclude": ["node_modules", "dist", "build"]
}
